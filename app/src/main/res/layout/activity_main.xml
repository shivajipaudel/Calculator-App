<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/display"
            android:layout_marginTop="280dp"
            android:text="0"
            android:textSize="40sp"
            android:textColor="@color/black"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnclear"
            android:layout_width="120dp"
            android:layout_height="65dp"
            android:layout_margin="5dp"
            android:backgroundTint="@color/white"
            android:text="C"
            android:textColor="@color/sp"
            android:textSize="25dp"
            android:onClick="funclr"/>



        <Button
            android:id="@+id/btnpercentile"
            android:layout_width="120dp"
            android:layout_height="65dp"
            android:layout_margin="5dp"
            android:backgroundTint="@color/white"
            android:text="%"
            android:textColor="@color/sp"
            android:textSize="25dp"
            android:onClick="funmod"/>

        <Button
            android:id="@+id/btndivide"
            android:layout_width="90dp"
            android:layout_height="65dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:text="/"
            android:textColor="@color/sp"
            android:textSize="25dp"
            android:onClick="fundiv"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn7"
            android:layout_width="90dp"
            android:layout_height="65dp"
            android:layout_margin="5dp"
            android:backgroundTint="@color/white"
            android:text="7"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:onClick="fun7"/>

        <Button
            android:id="@+id/btn8"
            android:layout_width="90dp"
            android:layout_height="65dp"
            android:layout_margin="5dp"
            android:backgroundTint="@color/white"
            android:text="8"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:onClick="fun8"/>

        <Button
            android:id="@+id/btn9"
            android:layout_width="90dp"
            android:layout_height="65dp"
            android:layout_margin="5dp"
            android:backgroundTint="@color/white"
            android:text="9"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:onClick="fun9"/>

        <Button
            android:id="@+id/btnmultiply"
            android:layout_width="90dp"
            android:layout_height="65dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:text="*"
            android:textColor="@color/sp"
            android:textSize="25dp"
            android:onClick="funmul"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn4"
            android:layout_width="90dp"
            android:layout_height="65dp"
            android:layout_margin="5dp"
            android:backgroundTint="@color/white"
            android:text="4"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:onClick="fun4"/>

        <Button
            android:id="@+id/btn5"
            android:layout_width="90dp"
            android:layout_height="65dp"
            android:layout_margin="5dp"
            android:backgroundTint="@color/white"
            android:text="5"
            android:textColor="@color/black"

            android:textSize="25dp"
            android:onClick="fun5"/>

        <Button
            android:id="@+id/btn6"
            android:layout_width="90dp"
            android:layout_height="65dp"
            android:layout_margin="5dp"
            android:backgroundTint="@color/white"
            android:text="6"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:onClick="fun6"/>

        <Button
            android:id="@+id/btnminus"
            android:layout_width="90dp"
            android:layout_height="65dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:text="-"
            android:textColor="@color/sp"
            android:textSize="25dp"
            android:onClick="funmin"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn1"
            android:layout_width="90dp"
            android:layout_height="65dp"
            android:layout_margin="5dp"
            android:backgroundTint="@color/white"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:onClick="fun1"/>

        <Button
            android:id="@+id/btn2"
            android:layout_width="90dp"
            android:layout_height="65dp"
            android:layout_margin="5dp"
            android:backgroundTint="@color/white"
            android:text="2"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:onClick="fun2"/>

        <Button
            android:id="@+id/btn3"
            android:layout_width="90dp"
            android:layout_height="65dp"
            android:layout_margin="5dp"
            android:backgroundTint="@color/white"
            android:text="3"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:onClick="fun3"/>

        <Button
            android:id="@+id/btnplus"
            android:layout_width="90dp"
            android:layout_height="65dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:text="+"
            android:textColor="@color/sp"
            android:textSize="25dp"
            android:onClick="funplus"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btn0"
            android:layout_width="140dp"
            android:layout_height="65dp"
            android:layout_margin="5dp"
            android:backgroundTint="@color/white"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:onClick="fun0"/>

        <Button
            android:id="@+id/btndot"
            android:layout_width="140dp"
            android:layout_height="65dp"
            android:layout_margin="5dp"
            android:backgroundTint="@color/white"
            android:text="."
            android:textColor="@color/black"
            android:textSize="25dp"
            android:onClick="fundot"/>

        <Button
            android:id="@+id/btnequal"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/sp"
            android:text="="
            android:textColor="@color/white"
            android:textSize="25dp"
            app:cornerRadius="200dp"
            android:onClick="funequal"/>


    </LinearLayout>

</LinearLayout>